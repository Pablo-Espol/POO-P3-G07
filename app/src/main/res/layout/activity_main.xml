<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="30dp">

  <!-- TÃ­tulo de la empresa -->

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="match_parent"
      android:layout_height="46dp"
      app:srcCompat="@drawable/icon_logo" />

  <TextView
      android:id="@+id/txtTituloEmpresa"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="50dp"
      android:text="TECNICENTRO"
      android:textColor="@android:color/black"
      android:textSize="24sp"
      android:textStyle="bold" />

  <GridLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:alignmentMode="alignMargins"
      android:columnCount="2"
      android:padding="16dp"
      android:rowCount="4"
      android:rowOrderPreserved="false">

    <Button
        android:id="@+id/btnMainClient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:drawableTop="@drawable/icon_persona"
        android:text="CLIENTES" />

    <Button
        android:id="@+id/btnMainProv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:drawableTop="@drawable/icon_proveedor"
        android:text="PROVEEDOR" />

    <Button
        android:id="@+id/btnMainServ"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:drawableTop="@drawable/icon_servicio"
        android:text="SERVICIO" />

    <Button
        android:id="@+id/btnMainTec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:drawableTop="@drawable/icon_tecnico"
        android:text="TECNICO" />

    <Button
        android:id="@+id/btnMainOrden"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:drawableTop="@drawable/icon_orden"
        android:text="ORDEN" />

    <Button
        android:id="@+id/btnMainFact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:drawableTop="@drawable/icon_factura"
        android:text="FACTURA" />

    <Button
        android:id="@+id/btnMainRTec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:drawableTop="@drawable/icon_rtecnico"
        android:text="R. TECNICO" />

    <Button
        android:id="@+id/btnMainRServ"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:drawableTop="@drawable/icon_rservicio"
        android:text="R. SERVICIO" />

  </GridLayout>
</LinearLayout>
