<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTituloReporteTecnico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reporte por Técnico"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etAnioTecnico"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="Año (e.g. 2025)"
        android:inputType="number"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloReporteTecnico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/spMesTecnico"
        app:layout_constraintHorizontal_weight="1"/>

    <Spinner
        android:id="@+id/spMesTecnico"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloReporteTecnico"
        app:layout_constraintStart_toEndOf="@id/etAnioTecnico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/btnConsultarTecnico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Consultar"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/spMesTecnico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReporteTecnico"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnConsultarTecnico"
        app:layout_constraintBottom_toTopOf="@id/tvTotalGeneralTecnico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTotalGeneralTecnico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total general: $0.00"
        android:textStyle="bold"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>